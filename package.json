{
  "name": "mpv-remote",
  "version": "2.0.0",
  "description": "An application to provide a web-based remote controller for MPV",
  "main": "index.js",
  "scripts": {
	"install": "npm install && npm install ./client",
    "build": "cd client && npm run build",
    "start": "export NODE_ENV=production && node src/index.js",
    "dev:server": "nodemon src/index.js",
    "dev:client": "cd client && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^6.5.1",
    "nodemon": "^2.0.15"
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "file-type": "^17.0.2",
    "matroska-subtitles": "^3.3.2",
    "node-mpv": "^1.5.0"
  }
}
