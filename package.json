{
  "name": "mpv-remote",
  "version": "2.0.0",
  "type": "module",
  "engines": {
    "node": ">=17.3.0"
  },
  "description": "An application to provide a web-based remote controller for MPV",
  "main": "index.js",
  "scripts": {
    "install": "npm install && npm install ./client",
    "lint": "eslint --fix ./src",
    "build": "tsc && npm run build --prefix ./client",
    "dev:server": "nodemon ./src/index.ts",
    "dev:client": "npm run dev --prefix ./client",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "start": "export NODE_ENV=production && node dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "concurrently": "^6.5.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "file-type": "^17.0.2",
    "matroska-subtitles": "^3.3.2",
    "node-mpv": "^1.5.0",
    "winston": "^3.3.3"
  }
}
